{
  "name": "c-lightning.ts",
  "version": "0.1.0-beta.2",
  "packageManager": "yarn@3.2.0",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "jsonparse": "^1.3.1",
    "prettier": "^2.5.1",
    "rollup": "^2.68.0",
    "rollup-plugin-dts": "^4.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "typedoc": "^0.22.12",
    "typescript": "^4.6.2"
  },
  "type": "module",
  "scripts": {
    "lint": "eslint --fix src && prettier -w \"src/**/*.ts\"",
    "build": "rm -rf dist && rollup -c && rm -rf dist/generated dist/rest dist/index.d.ts dist/plugin.d.ts dist/rest.d.ts dist/socket.d.ts cjs/generated cjs/*.d.ts cjs/rest && mv dist/c-lightning.d.ts dist/index.d.ts && cp -f dist/index.d.ts cjs/index.d.cts && mv cjs/index.js cjs/index.cjs",
    "docs": "typedoc --out docs src/index.ts",
    "prepublish": "yarn build"
  },
  "main": "dist/index.js"
}

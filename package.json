{
  "name": "c-lightning.ts",
  "version": "0.1.0",
  "packageManager": "yarn@3.2.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.6.1",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.3"
  },
  "type": "module",
  "scripts": {
    "lint": "eslint --fix packages && prettier -w \"packages/*/src/**/*.ts\"",
    "build": "yarn workspaces foreach install && yarn workspaces foreach run build && yarn workspaces foreach install",
    "docs": "typedoc --out docs packages/core/src/index.ts"
  },
  "main": "dist/index.js"
}
